{
  "title": "Spring Boot - Endpoints & Traffic",
  "tags": ["springboot", "prometheus"],
  "schemaVersion": 42,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "table",
      "title": "Top Endpoints (Requisições/s)",
      "datasource": {
        "type": "prometheus",
        "uid": "bf1fe9frjzdvkf"
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_server_requests_seconds_count{job=\"springboot\"}[1m])) by (uri))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Latência Média por Endpoint",
      "datasource": {
        "type": "prometheus",
        "uid": "bf1fe9frjzdvkf"
      },
      "targets": [
        {
          "expr": "avg(rate(http_server_requests_seconds_sum{job=\"springboot\"}[1m]) / rate(http_server_requests_seconds_count{job=\"springboot\"}[1m])) by (uri)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "table",
      "title": "Status Codes por Endpoint",
      "datasource": {
        "type": "prometheus",
        "uid": "bf1fe9frjzdvkf"
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"springboot\"}[1m])) by (uri, status)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ]
}