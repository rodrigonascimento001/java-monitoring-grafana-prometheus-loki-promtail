{
  "id": null,
  "title": "Spring Boot Observability - Complete (Prometheus + Loki)",
  "uid": "springboot-observability-complete",
  "version": 1,
  "schemaVersion": 38,
  "tags": [
    "springboot",
    "prometheus",
    "loki",
    "observability",
    "complete"
  ],
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "application",
        "label": "Application",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "bf1fe9frjzdvkf"
        },
        "query": "label_values(application)",
        "current": {
          "text": "my-spring-app",
          "value": "my-spring-app"
        }
      },
      {
        "name": "uri",
        "label": "Endpoint",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "bf1fe9frjzdvkf"
        },
        "query": "label_values(http_server_requests_seconds_count{application=\"$application\"}, uri)",
        "current": {
          "text": "/hello",
          "value": "/hello"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Total Requests (5m)",
      "targets": [
        {
          "expr": "sum(increase(http_server_requests_seconds_count{application=\"$application\"}[5m]))",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "bf1fe9frjzdvkf" }
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 }
    },
    {
      "type": "stat",
      "title": "Error Rate (%) (5m)",
      "targets": [
        {
          "expr": "100 * (sum(rate(http_server_requests_seconds_count{status!~\"2..\",application=\"$application\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=\"$application\"}[5m])))",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "bf1fe9frjzdvkf" }
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green" },
          { "value": 5,   "color": "orange" },
          { "value": 10,  "color": "red" }
        ]
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 }
    },
    {
      "type": "stat",
      "title": "Avg Latency (ms, 5m)",
      "targets": [
        {
          "expr": "1000 * (sum(rate(http_server_requests_seconds_sum{application=\"$application\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=\"$application\"}[5m])))",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "bf1fe9frjzdvkf" }
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green" },
          { "value": 300,   "color": "orange" },
          { "value": 800,   "color": "red" }
        ]
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 }
    },
    {
      "type": "stat",
      "title": "CPU Usage (%)",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{application=\"$application\"}[1m]) * 100",
          "refId": "A",
          "datasource": { "type": "prometheus",   "uid":"bf1fe9frjzdvkf" }
        }
      ],
      "thresholds": {
        "mode":"absolute",
        "steps":[
          {  	"color":"green" },
          {  	"value":60,"color":"orange" },
          {  	"value":85,"color":"red" }
        ]
      },
      "gridPos":{"h":4,"w":6,"x":18,"y":1}
    },
    {
      "type":"row","title":"Endpoint /hello Metrics","gridPos":{"h":1,"w":24,"x":0,"y":5},"collapsed":false
    },
    {
      "type":"timeseries","title":"Latency per request ($uri)","targets":[
      {
        "expr":"rate(http_server_requests_seconds_sum{uri=\"$uri\",application=\"$application\"}[1m]) / rate(http_server_requests_seconds_count{uri=\"$uri\",application=\"$application\"}[1m]) * 1000",
        "refId":"A","datasource":{"type":"prometheus","uid":"bf1fe9frjzdvkf"}
      }
    ],
      "gridPos":{"h":8,"w":12,"x":0,"y":6}
    },
    {
      "type":"timeseries","title":"Requests per second ($uri)","targets":[
      {
        "expr":"rate(http_server_requests_seconds_count{uri=\"$uri\",application=\"$application\"}[1m])",
        "refId":"A","datasource":{"type":"prometheus","uid":"bf1fe9frjzdvkf"}
      }
    ],
      "gridPos":{"h":8,"w":12,"x":12,"y":6}
    },
    {
      "type":"row","title":"System Metrics (JVM)","gridPos":{"h":1,"w":24,"x":0,"y":14},"collapsed":false
    },
    {
      "type":"timeseries","title":"JVM Heap Used (MB)","targets":[
      {
        "expr":"jvm_memory_used_bytes{application=\"$application\",area=\"heap\"} / 1024 / 1024",
        "refId":"A","datasource":{"type":"prometheus","uid":"bf1fe9frjzdvkf"}
      }
    ],
      "gridPos":{"h":8,"w":12,"x":0,"y":15}
    },
    {
      "type":"timeseries","title":"Live Threads","targets":[
      {
        "expr":"jvm_threads_live_threads{application=\"$application\"}",
        "refId":"A","datasource":{"type":"prometheus","uid":"bf1fe9frjzdvkf"}
      }
    ],
      "gridPos":{"h":8,"w":12,"x":12,"y":15}
    },
    {
      "type":"row","title":"Logs (Loki)","gridPos":{"h":1,"w":24,"x":0,"y":23},"collapsed":false
    },
    {
      "type":"logs","title":"Application Logs (all)","targets":[
      {
        "expr":"{app=\"$application\"}",
        "refId":"A","datasource":{"type":"loki","uid":"bf1fdg6buk4xsd"}
      }
    ],
      "gridPos":{"h":8,"w":12,"x":0,"y":24}
    },
    {
      "type":"logs","title":"Error Logs (ERROR|Exception|WARN)","targets":[
      {
        "expr":"{app=\"$application\"} |~ \"ERROR|Exception|WARN\"",
        "refId":"A","datasource":{"type":"loki","uid":"bf1fdg6buk4xsd"}
      }
    ],
      "gridPos":{"h":8,"w":12,"x":12,"y":24}
    }
  ]

}